<div class="uk-container">
  <div class="main-users-index">
    <div class="container">
      <h1 class="users-heading">ユーザー一覧</h1>
      <% @users.each do |user| %>
        <div class="users-index-item">
          <div class="user-left">
            <%= content_tag :div, nil, class: 'user-left', style: %Q(background-image: url('#{asset_path user.image_name}')) %>
          </div>

          <div class="user-right">
            <%= link_to(user.name, "/users/#{user.id}") %>
          </div>
        </div>
      <% end %>
    </div>
    <footer>
      <p>&copy; Copyright NOGIBOARD. All rights reserved.</p>
    </footer>
  </div>
</div>
