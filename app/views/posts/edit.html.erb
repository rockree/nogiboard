<div class="main-edit-posts">
  <div class="container">
    <div class="edit">
      <%= form_tag("/posts/#{@post.id}/update")do %>
        <% @post.errors.full_messages.each do |message| %>
          <div class="form-error">
          <%= message %>
          </div>
        <% end %>
        <textarea name="content"><%= @post.content %></textarea>
        <input type="submit" value="保存">
      <% end %>
    </div>
  </div>
</div>
